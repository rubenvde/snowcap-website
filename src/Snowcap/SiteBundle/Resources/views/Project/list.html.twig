{% extends "SnowcapSiteBundle::base.html.twig" %}
{% import "SnowcapSiteBundle::macros.html.twig" as helper %}
{% block body %}
    <div class="full">
        <section class="main">
            <h1>{{ "project.list.title" | trans }}</h1>
            {% render 'SnowcapSiteBundle:Project:highlighted'%}
            {% if projects|length > 0 %}
                <ul class="project-list">
                    {% for project in projects %}
                        <li>
                            <a class="flipper" href="{{ path('snwcp_site_project_show', {'slug': project.slug}) }}" title="{{ "project.link.title" | trans({'%title%': project.title}) }}">
                                {{ helper.project_image_flipper(project) }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>{{ "project.list.empty" | trans }}</p>
            {% endif %}
        </section>
    </div>
{% endblock body %}