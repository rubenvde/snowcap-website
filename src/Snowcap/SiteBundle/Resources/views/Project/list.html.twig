{% if projects | length > 0 %}
    {% import "SnowcapSiteBundle::macros.html.twig" as helper %}
    <ul>
        {% for project in projects %}
            <li{{ loop.index % 3 == 0 ? ' class="three"' : '' }}>
                <a class="visual visual-{{ format }} flipper" href="{{ path('snwcp_site_project_show', {'slug': project.slug}) }}" title="{{ "cases.link.title" | trans({'%title%': project.title}) }}">
                    {{ helper.project_image_flipper(project, format) }}
                </a>
                <h3>{{project.title}}</h3>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>{{ "cases.latest.empty" | trans }}</p>
{% endif %}