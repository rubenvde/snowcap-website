{% if project %}
    {% import "SnowcapSiteBundle::macros.html.twig" as helper %}
    <div class="project-highlighted">
        <h2>{{ project.title }}</h2>
        <div class="body">
            {{ project.introduction | markdown }}
            <a href="{{ url('snwcp_site_project_show', {'slug': project.slug}) }}" title="{{ 'general.readmore.title' | trans }}" class="read-more">{{ 'general.readmore.label' | trans }}</a>
        </div>
        <a class="flipper flipper_thumb" href="{{ path('snwcp_site_project_show', {'slug': project.slug}) }}" title="{{ "project.link.title" | trans({'%title%': project.title}) }}">
            {{ helper.project_image_flipper(project) }}
        </a>
    </div>
{% endif %}