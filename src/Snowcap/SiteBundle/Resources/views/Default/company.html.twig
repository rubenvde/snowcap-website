{% extends "SnowcapSiteBundle::base.html.twig" %}
{% block meta_title %}{{ "company.meta.title" | trans }}{% endblock %}
{% block meta_description %}{{ "company.meta.description" | trans }}{% endblock %}
{% block meta_keywords %}{{ "company.meta.keywords" | trans }}{% endblock %}
{% set body_class = 'company' %}
{% block body %}
    <h1 class="main-title">{{ "company.title" | trans }}</h1>
    <h2 id="mountain">{{ "general.snowcap" | trans }}</h2>
    <blockquote>{{ "company.quote" | trans }}</blockquote>
    <div class="full">
        <section class="main content standard">
            {{ 'company.body' | trans | markdown }}
        </section>
    </div>
{% endblock %}
