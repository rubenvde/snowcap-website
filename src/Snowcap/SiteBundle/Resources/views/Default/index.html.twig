{% extends "SnowcapSiteBundle::base.html.twig" %}
{% set body_class = 'home' %}
{% block body %}
    <h1 class="home-title">{{ "general.snowcap" | trans }}</h1>
    <h2 class="baseline">{{ "general.baseline" | trans }}</h2>
    <div class="full">
        <section class="main content">
            {{ "general.nutshell" | trans | markdown }}
        </section>
        <section class="content projects last">
            <h2>{{ "cases.title" | trans }}</h2>
            {% render "SnowcapSiteBundle:Project:list" with {'limit': 3} %}
        </section>
    </div>
    <div class="split split-3">
        <img id="mask-image" src="{{ asset('/assets/front/images/mask.png') }}" alt="Snowcap super mask"/>
        <section class="secondary content blog">
            {% render "SnowcapSiteBundle:Post:widget" with {'limit': 1} %}
        </section>
        <section class="secondary content tweets">
            {% render "SnowcapSiteBundle:Widget:tweets" %}
            <a href="{{ path('snwcp_widget_tweets') }}" title="{{ "widget.tweets.ajax.loader" | trans }}" class="ajax-loader">{{ "widget.tweets.ajax.loader" | trans }}</a>
        </section>
        <section class="nerds last">
            {% include "SnowcapSiteBundle:Widget:nerds.html.twig" %}
        </section>
    </div>
{% endblock %}
