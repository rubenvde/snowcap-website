<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}SNOWCAP{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/assets/front/css/screen.css') }}" type="text/css" rel="stylesheet" />
            <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' rel='stylesheet' type='text/css'>
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="{{ body_class | default('default') }}">
        <header>
            {% block header %}
                <nav>
                    <h1><a href="{{ url('snwcp_site_default_index') }}">Snowcap</a></h1>
                    <a href="{{ url('snwcp_site_default_index') }}"{% if is_menu_active(app.request.get('_controller'), 'Default', 'index') %} class="active" {%endif %}>{{ "navigation.home" | trans }}</a>
                    <a href="{{ url('snwcp_site_default_company') }}"{% if is_menu_active(app.request.get('_controller'), 'Default', 'company') %} class="active" {%endif %}>{{ "navigation.company" | trans }}</a>
                    <a href="{{ url('snwcp_site_default_method') }}"{% if is_menu_active(app.request.get('_controller'), 'Default', 'method') %} class="active" {%endif %}>{{ "navigation.method" | trans }}</a>
                    <a href="{{ url('snwcp_site_default_team') }}"{% if is_menu_active(app.request.get('_controller'), 'Default', 'team') %} class="active" {%endif %}>{{ "navigation.team" | trans }}</a>
                    <a href="{{ url('snwcp_site_post_list') }}"{% if is_menu_active(app.request.get('_controller'), 'Post') %} class="active" {%endif %}>{{ "navigation.posts" | trans }}</a>
                    <a href="{{ url('snwcp_site_project_list') }}"{% if is_menu_active(app.request.get('_controller'), 'Project') %} class="active" {%endif %}>{{ "navigation.projects" | trans }}</a>
                    <a href="{{ url('snwcp_site_default_contact') }}"{% if is_menu_active(app.request.get('_controller'), 'Default', 'contact') %} class="active" {%endif %}>{{ "navigation.contact" | trans }}</a>
                </nav>
            {% endblock %}
        </header>
        {% block body %}{% endblock %}
        <footer>
            <address>
                {% include "SnowcapSiteBundle:Widget:contact.html.twig" %}
            </address>
            <aside class="technology">
                {% include "SnowcapSiteBundle:Widget:technology.html.twig" %}
            </aside>
        </footer>
        {% block javascripts %}
            <script type="text/javascript" src="/assets/vendors/jquery/jquery-1.6.1.min.js"></script>
            <script type="text/javascript" src="/assets/vendors/jquery/jquery-ui-1.8.13.custom.min.js"></script>
			<script type="text/javascript" src="/assets/front/js/screen.js"></script>
        {% endblock %}
    </body>
</html>
