{% extends "SnowcapSiteBundle:Admin:base.html.twig" %}
{% block body %}
<h2>Post list</h2>
<table class="records_list">
	<thead>
		<tr>
			<th>Id</th>
			<th>Title</th>
			<th>Body</th>
			<th>Published_at</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for entity in entities %}
		<tr>
			<td>
			<a href="{{ path('admin_posts_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
			</td>
			<td>{{ entity.title }}</td>
			<td>{{ entity.body }}</td>
			<td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>
			<td>
			<ul>
				<li>
					<a href="{{ path('admin_posts_show', { 'id': entity.id }) }}">show</a>
				</li>
				<li>
					<a href="{{ path('admin_posts_edit', { 'id': entity.id }) }}">edit</a>
				</li>
			</ul>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
<ul>
	<li>
		<a href="{{ path('admin_posts_new') }}"> Create a new entry</a>
	</li>
</ul>
{% endblock %}