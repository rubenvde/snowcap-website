{% extends "SnowcapSiteBundle:Admin:base.html.twig" %}
{% block body %}
<h2>Post list</h2>
<table class="records_list">
	<thead>
		<tr>
			<th>Id</th>
			<th>Title</th>
			<th>Body</th>
			<th>Published_at</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for entity in entities %}
		<tr>
			<td>
			<a href="{{ path('admin_posts_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
			</td>
			<td>{{ entity.title }}</td>
			<td>{{ entity.body }}</td>
			<td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>
			<td>
				<nav>
					<a href="{{ path('admin_posts_show', { 'id': entity.id }) }}" class="ui-button ui-button-icon-only ui-icon ui-icon-zoomin">show</a>
					<a href="{{ path('admin_posts_edit', { 'id': entity.id }) }}" class="ui-button ui-button-icon-only ui-icon ui-icon-pencil">edit</a>
					<a href="{{ path('admin_posts_delete', { 'id': entity.id }) }}" class="ui-button ui-button-icon-only ui-icon ui-icon-trash">edit</a>
				</nav>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
<nav>
	<a href="{{ path('admin_posts_new') }}" class="ui-button ui-icon ui-icon-circle-plus"> Create a new entry</a>
</nav>
{% endblock %}