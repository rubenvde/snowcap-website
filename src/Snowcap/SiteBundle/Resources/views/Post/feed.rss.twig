<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
    <channel>
        <title>{{ 'general.feed.title' | trans }}</title>
        <description>{{ 'general.feed.description' | trans }}</description>
        <link>{{ path('snwcp_site_post_list') }}</link>
        <lastBuildDate>{{ 'now' | date("D, d M Y H:i:s O") }}</lastBuildDate>
        <pubDate>{{ 'now' | date("D, d M Y H:i:s O") }}</pubDate>
        <ttl>1800</ttl>
        {% for post in posts %}
             <item>
                 <title>{{ post.title }}</title>
                 <description>{{ post.summary }}</description>
                 <link>{{ url('snwcp_site_post_show', {'slug': post.slug })}}</link>
                 <guid>{{ post.slug }}</guid>
                 <pubDate>{{ post.getPublishedAt() | date("D, d M Y H:i:s O")}}</pubDate>
             </item>
         {% endfor %}
    </channel>
</rss>