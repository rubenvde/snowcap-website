{% extends "SnowcapSiteBundle::base.html.twig" %}
{% block body %}
    <h2>{{ "post.list.title" | trans }}</h2>
    {% for post in posts %}
        <h3>{{ post.title }}</h3>
        <h4>{{ post.publishedAt | relativeTime }}</h4>
        <p>{{ post.body | markdown }}</p>
        <ul>
            {% for tag in post.tags %}
                <li>{{tag.name}}</li>
            {%endfor%}
        </ul>
    {% else %}
        <p>{{ "post.list.empty" | trans }}</p>
    {% endfor %}
{% endblock body %}