{% extends "SnowcapSiteBundle::base.html.twig" %}
{% block body %}
    <div class="full">
        <section class="main">
            <h1>{{ "post.list.title" | trans }}</h1>
            {% for post in posts %}
                <h2>{{ post.title }}</h2>
                <h3>{{ post.published_at | relativeTime }}</h3>
                <div class="body">
                    {{ post.summary | markdown }}
                    {% if post.body %}
                        <a href="{{ url('snwcp_site_post_show', { 'slug': post.slug }) }}" title="{{ 'Read more' | trans }}" class="read-more">{{ 'Read more' | trans }}</a>
                    {% endif %}
                </div>
                {% if post.tags|length > 0 %}
                    <ul class="post-list">
                        {% for tag in post.tags %}
                            <li>{{tag.name}}</li>
                        {%endfor%}
                    </ul>
                {% endif %}
            {% else %}
                <p>{{ "post.list.empty" | trans }}</p>
            {% endfor %}
        </section>
    </div>
{% endblock body %}