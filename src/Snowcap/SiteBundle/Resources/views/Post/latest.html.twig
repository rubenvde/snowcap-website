<h2>{{ "post.latest.title" | trans }}</h2>
{% if latestPosts|length > 0 %}
    <ul class="post-list">
        {% for post in latestPosts %}
            <li>
                <h3>{{ post.title }}</h3>
                <div class="body">
                    {{ post.summary | markdown }}
                    <a href="{{ url('snwcp_site_post_show', { 'slug': post.slug }) }}" title="{{ "general.readmore.title" | trans }}">{{ "general.readmore.label" | trans }}</a>
                </div>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>{{ "post.latest.empty" | trans }}</p>
{% endif %}