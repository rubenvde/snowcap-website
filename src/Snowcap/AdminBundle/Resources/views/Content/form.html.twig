{% extends "SnowcapAdminBundle::base.html.twig" %}

{% block body %}
<section class="section-700">
	<h2>{{ form_title }}</h2>
	<form action="{{ form_action }}" method="post" {{ form_enctype(form) }}>
		{{ form_errors(form) }}
		{% for field in form %}
		    {{ form_row(field) }}
		{% endfor %}
	    {{ form_rest(form) }}
		<p>
			<button type="submit" class="ui-icon ui-icon-circle-check">{{ "content.save" | trans }}</button>
		</p>
	</form>
	<nav>
		<a href="{{ path('content', {'type': type }) }}" class="ui-button ui-icon ui-icon-circle-triangle-w">{{ "content.back_to_list" | trans }}</a>
	</nav>
</section>
{% endblock %}


